<div class="space-y-6 " data-controller="questions--update-validator">
  <div class="bg-white overflow-hidden sm:rounded-md">
    <%= form_with url: deck_questions_path(), method: 'put', id:'form-update'  do |f| %>
      <div class="shadow sm:rounded-md sm:overflow-hidden">
        <div class="bg-white py-6 px-4 space-y-7 sm:p-6">
          <div>
            <h3 class="text-lg leading-5 font-medium text-gray-900">Update question</h3>
            <p class="mt-1 text-sm text-gray-500">Use this form to update questions.</p>
          </div>

          <div class="grid grid-cols-6 gap-6">

            <div class="col-span-6 sm:col-span-6"  >
              <%= f.label :question_type, class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_field :question_type, :class => 'mt-1 block w-full bg-gray-200 border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-red-500 focus:border-indigo-500 sm:text-sm', readonly: true,
                                                                          'data-questions--questions-target':'questionTypeField',
                                                                          'data-questions--update-validator-target':'questionTypeField'%>
            </div>

            <div class="col-span-6 sm:col-span-6">
              <%= f.label :question, class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_field :question, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: 'type the question here',
                                          'data-questions--questions-target':'questionField',
                                          'data-questions--update-validator-target':'questionField'%>
            </div>

            <div class="col-span-6 sm:col-span-6">
              <%= f.label :correct_answer, class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_area :correct_answer, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: 'type the correct answer here',
                                              'data-questions--questions-target': 'correctAnswerField',
                                              'data-questions--update-validator-target':'correctAnswerField'%>
            </div>

            <div class="col-span-6 sm:col-span-6" 
            data-questions--questions-target="wrongAnswersFields"
            data-questions--update-validator-target="wrongAnswersFields"
            >
              <%= f.label "Wrong answers", class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_area :wrong_answer_n1, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: '1st question here' %>
              <%= f.text_area :wrong_answer_n2, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: '2st question here' %>
              <%= f.text_area :wrong_answer_n3, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: '3st question here' %>
            </div>

          </div>
        </div>
        <div class="py-3 text-right sm:px-6">
          <button type="submit" class="bg-indigo-600 border border-transparent rounded-md shadow-sm py-2 px-4 inline-flex justify-center text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
                                data-questions--update-validator-target="submitBtn">Save</button>
        </div>
      </div>
    <% end %>
  </div>
</div>
