<aside class="py-6 px-2 sm:px-6 lg:py-0 lg:px-0 lg:col-span-3 profiles-sidebar">
  <nav class="space-y-1">
    <%= link_to deck_path(deck), class:"#{controller_name == "decks" ? 'bg-blue-100' : 'hover:bg-gray-50'} text-gray-900 hover:text-gray-900  group rounded-md px-3 py-2 flex items-center text-sm font-medium text-red" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="text-black flex-shrink-0 -ml-1 mr-3 h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 9.776c.112-.017.227-.026.344-.026h15.812c.117 0 .232.009.344.026m-16.5 0a2.25 2.25 0 00-1.883 2.542l.857 6a2.25 2.25 0 002.227 1.932H19.05a2.25 2.25 0 002.227-1.932l.857-6a2.25 2.25 0 00-1.883-2.542m-16.5 0V6A2.25 2.25 0 016 3.75h3.879a1.5 1.5 0 011.06.44l2.122 2.12a1.5 1.5 0 001.06.44H18A2.25 2.25 0 0120.25 9v.776" />
      </svg>
      <span class="truncate"> Deck </span>
    <% end %>

    <%= link_to deck_questions_path(deck), class:"#{controller_name == "questions" ? 'bg-blue-100' : 'hover:bg-gray-50'} text-gray-900 hover:text-gray-900  group rounded-md px-3 py-2 flex items-center text-sm font-medium text-red" do %>
      <!-- Heroicon name: outline/credit-card -->
      <svg xmlns="http://www.w3.org/2000/svg" class="text-black flex-shrink-0 -ml-1 mr-3 h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 7.5h1.5m-1.5 3h1.5m-7.5 3h7.5m-7.5 3h7.5m3-9h3.375c.621 0 1.125.504 1.125 1.125V18a2.25 2.25 0 01-2.25 2.25M16.5 7.5V18a2.25 2.25 0 002.25 2.25M16.5 7.5V4.875c0-.621-.504-1.125-1.125-1.125H4.125C3.504 3.75 3 4.254 3 4.875V18a2.25 2.25 0 002.25 2.25h13.5M6 7.5h3v3H6v-3z" />
      </svg>
      <span class="truncate"> Questions </span>
    <% end %>
    <%= button_to deck_path(deck), form: { data: { turbo_confirm: "Are you sure? This action is irreversible" } }, method: :delete, class:"text-gray-900 hover:text-gray-900  group rounded-md px-3 py-2 flex items-center text-sm font-medium" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="text-red-500 flex-shrink-0 -ml-1 mr-3 h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
      </svg>
      <span> Destroy deck</span>
    <% end %>
  </nav>
</aside>
